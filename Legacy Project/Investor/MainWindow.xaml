<Window x:Class="Investor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Investor"
        mc:Ignorable="d"
        Title="Investor" Height="600" Width="930"
        WindowStartupLocation="CenterScreen"
        Icon="Resources/Icon.ico"     
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework" ResizeMode="CanMinimize" 
        >
      <Window.Resources>
        <Style TargetType="{x:Type local:MainWindow}">
            <Setter Property="shell:WindowChrome.WindowChrome">
                <Setter.Value>
                    <shell:WindowChrome CaptionHeight="15"
                                    CornerRadius="0"
                                    GlassFrameThickness="1"
                                    NonClientFrameEdges="None"
                                    ResizeBorderThickness="5"
                                    UseAeroCaptionButtons="False"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="15*"/>
            </Grid.RowDefinitions>

            <!-- Tool Bar -->
            <Border MouseLeftButtonDown="DragWindow" BorderBrush="Black" BorderThickness="0 0 0 1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Margin="3" Source="/Resources/IconS.png" Grid.Column="1"/>

                    <TextBlock x:Name="BarTxt" Padding="10 7" FontFamily="Myriad" FontSize="16" Text="Investor" Grid.Column="2" />

                    <Border x:Name="AccountsBtn" BorderThickness="0" BorderBrush="Black" MouseLeave="InterBtn_MouseLeave" MouseEnter="InterBtn_MouseEnter" MouseDown="ToolBtn_Click" Grid.Column="3">
                        <Image Margin="8" />
                    </Border>

                    <Border x:Name="SettingsBtn" BorderThickness="0" BorderBrush="Black" MouseLeave="InterBtn_MouseLeave" MouseEnter="InterBtn_MouseEnter" MouseDown="ToolBtn_Click" Grid.Column="4">
                        <Image Margin="8" Source="/Resources/Settings.png" />
                    </Border>

                    <Border x:Name="MiniBtn" BorderThickness="0" BorderBrush="Black" MouseLeave="InterBtn_MouseLeave" MouseEnter="InterBtn_MouseEnter" MouseDown="ToolBtn_Click" Grid.Column="5">
                        <Image Margin="11" Source="/Resources/Minimize.png" />
                    </Border>

                    <Border x:Name="ExitBtn" BorderThickness="0" BorderBrush="Black" MouseLeave="InterBtn_MouseLeave" MouseEnter="InterBtn_MouseEnter" MouseDown="ToolBtn_Click" Grid.Column="6">
                        <Image Margin="11" Source="/Resources/Exit.png" />
                    </Border>

                </Grid>
            </Border>

            <!-- Program Window -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" >

                <!-- Start Page -->
                <Grid x:Name="MainGrid" Width="110">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border x:Name="StatBtn" MouseLeave="InterBtn_MouseLeave" MouseEnter="InterBtn_MouseEnter" MouseDown="InBtn_Click" BorderBrush="Black" BorderThickness="0 0 1 1" Grid.Row="0">
                        <Image Margin="15" Source="/Resources/Status.png" />
                    </Border>

                    <Border x:Name="OpBtn" MouseLeave="InterBtn_MouseLeave" MouseEnter="InterBtn_MouseEnter" MouseDown="OutBtn_Click" BorderBrush="Black" BorderThickness="0 0 1 1" Grid.Row="1">
                        <Image Margin="15" Source="/Resources/Operations.png" />
                    </Border>

                    <Border x:Name="AcBtn" MouseLeave="InterBtn_MouseLeave" MouseEnter="InterBtn_MouseEnter" MouseDown="OutBtn_Click" BorderBrush="Black" BorderThickness="0 0 1 1" Grid.Row="2">
                        <Image Margin="15" Source="/Resources/Account 2.png" />
                    </Border>

                    <Border x:Name="InventBtn" MouseLeave="InterBtn_MouseLeave" MouseEnter="InterBtn_MouseEnter" MouseDown="OutBtn_Click" BorderBrush="Black" BorderThickness="0 0 1 1" Grid.Row="3">
                        <Image Margin="15" Source="/Resources/Store 2.png" />
                    </Border>

                    <Border x:Name="InvoBtn" MouseLeave="InterBtn_MouseLeave" MouseEnter="InterBtn_MouseEnter" MouseDown="InBtn_Click" BorderBrush="Black" BorderThickness="0 0 1 0" Grid.Row="4">
                        <Image Margin="15" Source="/Resources/Invoices.png" />
                    </Border>

                </Grid>

                <!-- Main Page -->
                <Grid MouseDown="Window_MouseDown" Width="800">

                    <!-- Operations Group -->
                    <Border x:Name="OpGroup" HorizontalAlignment="Left" Width="110" Margin="0 50 0 260" Visibility="Hidden" BorderBrush="Black" BorderThickness="1" Background="White" Panel.ZIndex="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border x:Name="TradeBtn" MouseLeave="InterBtn_MouseLeave" MouseEnter="InterBtn_MouseEnter" MouseDown="InBtn_Click" Grid.Row="0">
                                <Image Margin="15" Source="/Resources/Trade.png" />
                            </Border>
                            <Border x:Name="ReturnBtn" MouseLeave="InterBtn_MouseLeave" MouseEnter="InterBtn_MouseEnter" MouseDown="InBtn_Click" Grid.Row="1">
                                <Image Margin="15" Source="/Resources/Return.png" />
                            </Border>

                        </Grid>
                    </Border>

                    <!-- Account Group -->
                    <Border x:Name="AcGroup" HorizontalAlignment="Left" Width="110" Margin="0 155 0 155" Visibility="Hidden" BorderBrush="Black" BorderThickness="1" Background="White" Panel.ZIndex="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border x:Name="BalanBtn" MouseLeave="InterBtn_MouseLeave" MouseEnter="InterBtn_MouseEnter" MouseDown="InBtn_Click" Grid.Row="0">
                                <Image Margin="15" Source="/Resources/Balance.png" />
                            </Border>
                            <Border x:Name="TransBtn" MouseLeave="InterBtn_MouseLeave" MouseEnter="InterBtn_MouseEnter" MouseDown="InBtn_Click" Grid.Row="1">
                                <Image Margin="15" Source="/Resources/Transfer.png" />
                            </Border>

                        </Grid>
                    </Border>

                    <!-- Inventory Group -->
                    <Border x:Name="InventGroup" HorizontalAlignment="Left" Width="110" Margin="0 180 0 25" Visibility="Hidden" BorderBrush="Black" BorderThickness="1" Background="White" Panel.ZIndex="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border x:Name="ViewBtn" MouseLeave="InterBtn_MouseLeave" MouseEnter="InterBtn_MouseEnter" MouseDown="InBtn_Click" Grid.Row="0">
                                <Image Margin="15" Source="/Resources/View.png" />
                            </Border>
                            <Border x:Name="AddBtn" MouseLeave="InterBtn_MouseLeave" MouseEnter="InterBtn_MouseEnter" MouseDown="InBtn_Click" Grid.Row="1">
                                <Image Margin="15" Source="/Resources/Add.png" />
                            </Border>
                            <Border x:Name="TrnBtn" MouseLeave="InterBtn_MouseLeave" MouseEnter="InterBtn_MouseEnter" MouseDown="InBtn_Click" Grid.Row="2">
                                <Image Margin="15" Source="/Resources/GTransfer.png" />
                            </Border>


                        </Grid>
                    </Border>


                    <!-- Panels -->
                    <Grid x:Name="InPanel" Margin="10 30" Panel.ZIndex="1">

                        <!-- Stat Panel -->
                        <Grid Margin="70 30" x:Name="StatGrid" Visibility="Hidden">
                            <StackPanel>

                                <Grid Margin="0 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Margin="10 0" Text="Balance : " FontSize="16" />
                                    <Border Grid.Column="1" Margin="5 0" BorderBrush="Gray" BorderThickness="1">
                                        <TextBlock x:Name="SBalanceLbl" FontSize="16" Padding="5 0" Text="0.00"  />
                                    </Border>
                                    <TextBlock Grid.Column="2" Margin="10 0" Text="Dollars" FontSize="16" />
                                </Grid>

                                <Grid Margin="0 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Margin="10 0" Text="Goods Value : " FontSize="16" />
                                    <Border Grid.Column="1" Margin="5 0" BorderBrush="Gray" BorderThickness="1">
                                        <TextBlock x:Name="SSTotal" FontSize="16" Padding="5 0" Text="0.00"  />
                                    </Border>
                                    <TextBlock Grid.Column="2" Margin="10 0" Text="Dollars" FontSize="16" />
                                </Grid>

                                <Grid Margin="0 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Margin="10 0" Text="Capital : " FontSize="16" />
                                    <Border Grid.Column="1" Margin="5 0" BorderBrush="Gray" BorderThickness="1">
                                        <TextBlock x:Name="SCapital" FontSize="16" Padding="5 0" Text="0.00"/>
                                    </Border>
                                    <TextBlock Grid.Column="2" Margin="10 0" Text="Dollars" FontSize="16" />
                                </Grid>

                                <Grid Margin="0 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Margin="10 0" Text="Grass Profit : " FontSize="16" />
                                    <Border Grid.Column="1" Margin="5 0" BorderBrush="Gray" BorderThickness="1">
                                        <TextBlock x:Name="SGProfit" FontSize="16" Padding="5 0" Text="0.00"  />
                                    </Border>
                                    <TextBlock Grid.Column="2" Margin="10 0" Text="Dollars" FontSize="16" />
                                </Grid>

                                <Grid Margin="0 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Margin="10 0" Text="Number of operations made : " FontSize="16" />
                                    <Border Grid.Column="1" Margin="5 0" BorderBrush="Gray" BorderThickness="1">
                                        <TextBlock x:Name="OpNum" FontSize="16" Padding="5 0" Text="0"  />
                                    </Border>
                                </Grid>

                                <!--<GroupBox  Header="Store Warnings" BorderBrush="LightPink" FontSize="16" BorderThickness="3">

                                    <Grid  Margin="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="2*"/>
                                            <RowDefinition Height="2*"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Margin="0 5" Orientation="Horizontal" Grid.Row="1">
                                            <TextBlock  Margin="10 0" Text="1 -   Type : Pc " FontSize="16"  />
                                            <TextBlock Margin="10 0" Text="Brand : Dell Optiblex 760" FontSize="16"  />
                                            <TextBlock Margin="10 0" Text="Amount : " FontSize="16"  />
                                            <Border Width="50" Grid.Column="1" Margin="5 0" BorderBrush="Gray" BorderThickness="1">
                                                <TextBlock FontSize="16" Padding="5 0" Text="25"  />
                                            </Border>
                                        </StackPanel>

                                    </Grid>
                                </GroupBox>-->

                            </StackPanel>
                        </Grid>

                        <!-- Trade Panel -->
                        <Grid Margin="70 -20" x:Name="TradeGrid" Visibility="Hidden">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="14*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel>

                                <Grid Margin="10 5 ">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Order : " FontSize="16" Grid.Column="0" />
                                    <ComboBox x:Name="TOrder" SelectionChanged="TOrder_SelectionChanged" Margin="5 0" FontSize="16" Grid.Column="1">
                                        <ComboBoxItem IsSelected="True">Purchase</ComboBoxItem>
                                        <ComboBoxItem>Sell</ComboBoxItem>
                                    </ComboBox>
                                </Grid>

                                <CheckBox x:Name="IsPCustom" Click="ChkBx_Click" IsChecked="True" Content="Particular Customer" FontSize="16" Margin="10 5 10 0"/>
                                <Grid Margin="10 5 ">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Customer : " FontSize="16" Grid.Column="0" />
                                    <ComboBox x:Name="TCustomer" IsEditable="True" Margin="5 0" FontSize="16" Grid.Column="1"/>
                                </Grid>

                                <Grid Margin="10 5 ">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Brand Type : " FontSize="16" Grid.Column="0" />
                                    <ComboBox x:Name="TType" IsEditable="True" SelectionChanged="TType_SelectionChanged" Margin="5 0" FontSize="16" Grid.Column="1"/>
                                </Grid>

                                <Grid Margin="10 5 ">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Brand : " FontSize="16" Grid.Column="0" />
                                    <ComboBox x:Name="TBrand" SelectionChanged="TBrand_SelectionChanged" IsEditable="True" Margin="5 0" FontSize="16" Grid.Column="1"/>
                                </Grid>

                                <Grid Margin="10 5 ">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*"/>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Store : " FontSize="16" Grid.Column="0" />
                                    <Border Margin="5 0" BorderBrush="Gray" BorderThickness="1" Grid.Column="1">
                                        <TextBlock x:Name="TStore" FontSize="16" Padding="5 0" Text="0"  />
                                    </Border>
                                    <TextBlock x:Name="TScale0" Text=" Units " FontSize="16" Grid.Column="3" />
                                </Grid>

                                <Grid Margin="10 5 ">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*"/>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Amount : " FontSize="16" Grid.Column="0" />
                                    <TextBox x:Name="TAmount" Text="0" Margin="5 0" FontSize="16" Grid.Column="1" PreviewTextInput="TextBox_PreviewTextInput" TextChanged="TradingCT" LostFocus="TradingLF"/>
                                    <TextBlock x:Name="TScale1" Text=" Units" FontSize="16" Grid.Column="2" />
                                </Grid>

                                <CheckBox Visibility="Visible"  x:Name="IsNewPrice" IsChecked="False" Content="Set as a Trade price " FontSize="16" Margin="10 5 10 1"/>
                                <Grid Margin="10 5 ">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*"/>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                                        <TextBlock Text="Price Per " FontSize="16"  />
                                        <TextBox x:Name="TPriceA" Margin="3 0" Width="50" Text="0" FontSize="14" PreviewTextInput="TextBox_PreviewTextInput" TextChanged="TradingCT" LostFocus="TradingLF" />
                                        <TextBlock x:Name="TScale2" Text="Units : " FontSize="16" />
                                    </StackPanel>

                                    <TextBox x:Name="TPriceV" Text="0.00" Margin="5 0" FontSize="16" Grid.Column="1" PreviewTextInput="TextBox_PreviewTextInput" TextChanged="TradingCT" LostFocus="TradingLF"/>
                                    <TextBlock Text=" Dollars " FontSize="16" Grid.Column="3" />
                                </Grid>

                                <Grid Margin="10 5 ">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*"/>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Total Price : " FontSize="16" Grid.Column="0" />
                                    <Border Margin="5 0" BorderBrush="Gray" BorderThickness="1" Grid.Column="1">
                                        <TextBlock x:Name="TTotalLbl" FontSize="16" Padding="5 0" Text="0.00"  />
                                    </Border>
                                    <TextBlock Text=" Dollars " FontSize="16" Grid.Column="3" />
                                </Grid>

                                <Grid Margin="10 5 ">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5*"/>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Balance : " FontSize="16" Grid.Column="0" />
                                    <Border Margin="5 0" BorderBrush="Gray" BorderThickness="1" Grid.Column="1">
                                        <TextBlock x:Name="TBalanceLbl" FontSize="16" Padding="5 0" Text="0.00"  />
                                    </Border>
                                    <TextBlock Text=" Dollars " FontSize="16" Grid.Column="3" />
                                </Grid>

                                <GroupBox  Header="Date and Time" FontSize="16" BorderThickness="3">

                                    <Grid x:Name="DateGrid" Margin="20 3">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="2*"/>
                                            <RowDefinition Height="2*"/>
                                        </Grid.RowDefinitions>

                                        <CheckBox x:Name="IsNow" Click="ChkBx_Click" IsChecked="True" Content="Trade Now" FontSize="16" Margin="0 5" Grid.Row="0"/>

                                        <StackPanel x:Name="DT1" IsEnabled="False" Margin="0 3" Orientation="Horizontal" Grid.Row="1">
                                            <TextBlock Text="Hour : " FontSize="16"  />
                                            <TextBox x:Name="TDateH" Margin="15 0 20 0" Width="50" FontSize="16" PreviewTextInput="TextBox_PreviewTextInput" LostFocus="TextBox_LfNCurren" />
                                            <TextBlock Text="Min : " FontSize="16"  />
                                            <TextBox x:Name="TDateM" Margin="30 0" Width="50" FontSize="16" PreviewTextInput="TextBox_PreviewTextInput" LostFocus="TextBox_LfNCurren" />
                                            <ComboBox x:Name="TDateC" Width="70">
                                                <ComboBoxItem IsSelected="True" Content="Am"/>
                                                <ComboBoxItem Content="Pm"/>
                                            </ComboBox>
                                        </StackPanel>

                                        <StackPanel x:Name="DT2" IsEnabled="False" Margin="0 3" Orientation="Horizontal" Grid.Row="2">
                                            <TextBlock Text="Day : " FontSize="16"  />
                                            <TextBox x:Name="TDateD" Margin="22 0" Width="50" FontSize="16" PreviewTextInput="TextBox_PreviewTextInput" LostFocus="TextBox_LfNCurren" />
                                            <TextBlock Text="Month : " FontSize="16"  />
                                            <TextBox x:Name="TDateMo" Margin="10 0" Width="50" FontSize="16" PreviewTextInput="TextBox_PreviewTextInput" LostFocus="TextBox_LfNCurren" />
                                            <TextBlock Text="Year : " FontSize="16"  />
                                            <TextBox x:Name="TDateY" Margin="10 0" Width="80" FontSize="16" PreviewTextInput="TextBox_PreviewTextInput" LostFocus="TextBox_LfNCurren" />
                                        </StackPanel>


                                    </Grid>
                                </GroupBox>
                            </StackPanel>

                            <Button Grid.Row="1" Margin="200 3" x:Name="ConOBtn" Click="ConTOrder_Click" FontSize="16" Grid.Column="2"  Content="Confirm Order"/>

                        </Grid>

                        <!-- Balance Panel -->
                        <Grid Margin="30 0" x:Name="BalanGrid" Visibility="Hidden">
                            <StackPanel>

                                <Grid Margin="10 10 10 30">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Current Balance : " FontSize="16" Grid.Column="0" />
                                    <Border Margin="5 0" BorderBrush="Gray" BorderThickness="1" Grid.Column="1">
                                        <TextBlock x:Name="BalanceLbl" FontSize="16" Padding="5 0" Text="0.00"  />
                                    </Border>
                                    <TextBlock Text=" Dollars " FontSize="16" Grid.Column="3" />
                                </Grid>

                                <CheckBox x:Name="IsAllTime" Click="ChkBx_Click" IsChecked="True" Content="All Time" FontSize="16" Margin="10 10 10 0"/>
                                <Grid x:Name="BalanceTime" Background="WhiteSmoke" IsEnabled="False" Margin="10 10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text=" Year : " FontSize="16" Grid.Column="0" />
                                    <TextBox x:Name="BYear" Margin="5 0" Text="0" FontSize="16" Grid.Column="1" PreviewTextInput="TextBox_PreviewTextInput" LostFocus="TextBox_LfNCurren"/>
                                    <TextBlock Text=" Month : " FontSize="16" Grid.Column="3" />

                                    <ComboBox Margin="5 0" FontSize="16" Grid.Column="4" x:Name="BMonth">
                                        <ComboBoxItem IsSelected="True" Content="All Year"/>
                                        <ComboBoxItem Content="January"/>
                                        <ComboBoxItem Content="February"/>
                                        <ComboBoxItem Content="March"/>
                                        <ComboBoxItem Content="April"/>
                                        <ComboBoxItem Content="May"/>
                                        <ComboBoxItem Content="June"/>
                                        <ComboBoxItem Content="July"/>
                                        <ComboBoxItem Content="August"/>
                                        <ComboBoxItem Content="September"/>
                                        <ComboBoxItem Content="October"/>
                                        <ComboBoxItem Content="November"/>
                                        <ComboBoxItem Content="December"/>
                                    </ComboBox>

                                    <Button Margin="30 0" FontSize="16" Grid.Column="5" x:Name="BShowBTn" Content="Show Data" Click="BShowBTn_Click"/>
                                </Grid>

                                <Border BorderBrush="Black" BorderThickness="0 1 0 0">
                                    <StackPanel>
                                        <Grid Margin="10 10 ">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="4*"/>
                                                <ColumnDefinition Width="4*"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Total Purchases : " FontSize="16" Grid.Column="0" />
                                            <Border Margin="5 0" BorderBrush="Gray" BorderThickness="1" Grid.Column="1">
                                                <TextBlock x:Name="TPurshLbl" FontSize="16" Padding="5 0" Text="0.00"/>
                                            </Border>
                                            <TextBlock Text=" Dollars " FontSize="16" Grid.Column="3" />
                                        </Grid>

                                        <Grid Margin="10 10 ">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="4*"/>
                                                <ColumnDefinition Width="4*"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Total Sales : " FontSize="16" Grid.Column="0" />
                                            <Border Margin="5 0" BorderBrush="Gray" BorderThickness="1" Grid.Column="1">
                                                <TextBlock x:Name="TSalesLbl" FontSize="16" Padding="5 0" Text="0.00"/>
                                            </Border>
                                            <TextBlock Text=" Dollars " FontSize="16" Grid.Column="3" />
                                        </Grid>

                                        <Grid Margin="10 10 ">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="4*"/>
                                                <ColumnDefinition Width="4*"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Total Profits : " FontSize="16" Grid.Column="0" />
                                            <Border Margin="5 0" BorderBrush="Gray" BorderThickness="1" Grid.Column="1">
                                                <TextBlock x:Name="TProfLbl" FontSize="16" Padding="5 0" Text="0.00"  />
                                            </Border>
                                            <TextBlock Text=" Dollars " FontSize="16" Grid.Column="3" />
                                        </Grid>

                                        <Grid Margin="10 10 ">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="4*"/>
                                                <ColumnDefinition Width="4*"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Return of Sales : " FontSize="16" Grid.Column="0" />
                                            <Border Margin="5 0" BorderBrush="Gray" BorderThickness="1" Grid.Column="1">
                                                <TextBlock x:Name="TRSalesLbl" FontSize="16" Padding="5 0" Text="0.00"/>
                                            </Border>
                                            <TextBlock Text=" Dollars " FontSize="16" Grid.Column="3" />
                                        </Grid>

                                        <Grid Margin="10 10 ">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="4*"/>
                                                <ColumnDefinition Width="4*"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Return of Purchases : " FontSize="16" Grid.Column="0" />
                                            <Border Margin="5 0" BorderBrush="Gray" BorderThickness="1" Grid.Column="1">
                                                <TextBlock x:Name="TRPurshLbl" FontSize="16" Padding="5 0" Text="0.00"/>
                                            </Border>
                                            <TextBlock Text=" Dollars " FontSize="16" Grid.Column="3" />
                                        </Grid>

                                        <Grid Margin="10 10 ">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="4*"/>
                                                <ColumnDefinition Width="4*"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>
